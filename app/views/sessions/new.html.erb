<div class="links_box">
</div>
<article class="articles">
  <header>
    <h1>Sign in</h1>
  </header>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :username, "Username/Email" %><br>
    <%= f.text_field :username, :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in", :class => "submit_button" %>
  </div>
<% end %>
<br>
<p>New user? <%= link_to "Sin up now!", signup_path %></p>
<br>
<p><%= link_to "Forgot Password?", new_fp_path %></p>
</article>
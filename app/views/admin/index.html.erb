<div class="links_box">
  <%= render 'admin/admin_links' %>
</div>
<article class="articles">
  <header>
    <h1>Admin Home Page</h1>
    <%= render 'admin/flash_message' %>
  </header>
  <section>
    <table id="user_table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Name</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Super</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <% if !@users.empty? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= "#{user.username}" %></td>
          <td><%= "#{user.firstname} #{user.lastname}" %></td>
          <td><%= "#{user.email}" %></td>
          <td>
          <% if user.admin %>
            Yes
          <% else %>
            No
          <% end %>
          </td>
          <td>
          <% if user.super_user %>
            Yes
          <% else %>
            No
          <% end %>
          </td>
          <% if super_user && user.user_id != current_user.user_id %>
            <td><%= link_to "Delete", user_path(user.user_id), :method => :delete, :confirm => "Are You Sure?", :title => "Delete #{user.username}" %></td>
          <% else %>
            <td>&nbsp;</td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
    </tbody>
    </table>
  </section>

  

</article>
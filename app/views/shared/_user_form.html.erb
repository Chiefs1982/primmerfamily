<%= render 'layouts/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :firstname, "First name " %>(Required)<br>
  <%= f.text_field :firstname %><br><br>
</div>
<div class="field">
  <%= f.label :lastname, "Last name " %>(Required)<br>
  <%= f.text_field :lastname %><br><br>
</div>
<div class="field">
  
  <% if f.object.new_record? %>
    <%= f.label :username, "Username " %>(Required)<br>
    <%= f.text_field :username %><br><br>
  <% else %>
    <%= f.label :username, "Username" %><br>
    <%= f.text_field :username, :disabled => true %><br><br>
  <% end %>
</div>
<div class="field">
  <%= f.label :email, "Email " %>(Required)<br>
  <%= f.text_field :email %><br><br>
<div class="field">
  <%= f.label :password, "Password " %>(Required)<br>
  <%= f.password_field :password %><br><br>
</div>
<div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br>
</div>
<div class="field">
  <%= f.label :user, "Upload Picture " %>(Optional)<br>
  <% unless f.object.new_record? %>
      <%= image_tag(f.object.user.url(:thumb), :width => "50px") %>
  <% end %>
  <%= f.file_field :user %><br><br>
</div>
<div class="field">
  <%= f.check_box :newsletter, :checked => true %>
  <%= f.label :newsletter, "Sign up for newsletter" %><br><br>
</div>